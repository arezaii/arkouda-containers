+def _safe_get_chpl_home():
+    """
+    Safely get Chapel home directory. Returns None if Chapel tools are not available.
+    Used in CLIENT mode where Chapel compiler may not be installed.
+    """
+    try:
+        return subprocess.check_output(["chpl", "--print-chpl-home"]).decode("utf-8").strip()
+    except (subprocess.CalledProcessError, FileNotFoundError):
+        return None
+
+
+def _safe_check_asan():
+    """
+    Safely check ASAN configuration. Returns False if Chapel tools are not available.
+    Used in CLIENT mode where Chapel compiler may not be installed.
+    """
+    chpl_home = _safe_get_chpl_home()
+    if chpl_home is None:
+        return False
+    try:
+        asan_result = subprocess.check_output(
+            [f"{chpl_home}/util/chplenv/chpl_sanitizers.py", "--exe"]
+        ).decode("utf-8").strip()
+        return asan_result != "none"
+    except (subprocess.CalledProcessError, FileNotFoundError):
+        return False
+
+
+def _safe_is_multilocale_arkouda():
+    """
+    Safely check if arkouda server supports multilocale.
+    Returns False if server binary is not available (CLIENT mode).
+    """
+    try:
+        return is_multilocale_arkouda()
+    except (subprocess.CalledProcessError, FileNotFoundError, OSError):
+        return False
+
+
+def _safe_get_arkouda_numlocales():
+    """
+    Safely get arkouda numlocales. Returns environment variable value or 1 if
+    server binary is not available (CLIENT mode).
+    """
+    try:
+        return get_arkouda_numlocales()
+    except (subprocess.CalledProcessError, FileNotFoundError, OSError):
+        # In CLIENT mode, use environment variable or default to 1
+        env_nl = os.getenv("ARKOUDA_NUMLOCALES")
+        if env_nl:
+            return int(env_nl)
+        return 1
+
+
+def _get_test_locales(config):
