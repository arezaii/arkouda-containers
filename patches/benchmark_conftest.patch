+        # Use ARKOUDA_NUMLOCALES if set, otherwise use the --nl option, default to 1
+        env_nl = os.getenv("ARKOUDA_NUMLOCALES")
+        if env_nl:
+            return int(env_nl)
+        return eval(config.getoption("nl")) if config.getoption("nl") != "2" else 1
+
+    return eval(config.getoption("nl")) if _safe_is_multilocale_arkouda() else 1
+
